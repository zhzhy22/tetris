{
  "name": "game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "bundle:check": "node scripts/bundle-budget.mjs",
    "csp:verify": "node scripts/verify-csp.mjs",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings=0",
    "typecheck": "tsc --noEmit",
  "test": "vitest --run",
  "test:coverage": "vitest --run --coverage",
  "coverage:verify": "node scripts/verify-coverage.mjs",
  "coverage:check": "npm run test:coverage && npm run coverage:verify",
    "e2e": "playwright test",
    "soak": "tsx scripts/soak-runner.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.55.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
